{
    "name": "@cura/monorepo",
    "private": true,
    "workspaces": [
        "packages/hooks",
        "packages/components",
        "packages/contracts",
        "packages/commands",
        "examples/frontend"
    ],
    "scripts": {
        "build:hooks": "yarn workspace dummydummyhooks build",
        "build:components": "yarn workspace dummydummycomponents build",
        "build:storybook": "yarn workspace dummydummycomponents build-storybook",
        "build:frontend": "yarn build:hooks && yarn build:components && yarn workspace frontend build",
        "dev:components": "yarn workspace dummydummycomponents storybook",
        "dev:frontend": "yarn workspace frontend dev",
        "test:hooks": "yarn workspace dummydummyhooks test",
        "test:contracts": "yarn workspace @cura/contracts test",
        "release:hooks": "yarn workspace dummydummyhooks run semantic-release -e semantic-release-monorepo",
        "release:components": "yarn workspace dummydummycomponents run semantic-release -e semantic-release-monorepo",
        "release": "yarn release:hooks && yarn release:components"
    },
    "version": "0.0.0",
    "devDependencies": {
        "semantic-release": "^18.0.1",
        "semantic-release-monorepo": "^7.0.5"
    }
}
